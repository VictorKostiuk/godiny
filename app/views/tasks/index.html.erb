<p id="notice"><%= notice %></p>
<div class="content">

  <h1>Listing Tasks</h1>

  <table>

    <tbody>
    <div class="row">
    <% @tasks.each do |task| %>
      <div class="tasks">
        <div class="list-group">
          <%= link_to task, class: "list-group-item list-group-item-action" do %>
            <div class="d-flex w-50 justify-content-between">
              <h5 class="mb-1"><%= task.title %></h5>
            </div>
            <small><%= task.description %></small>
            <br>
            <small><%= task.deadline.strftime("%d/%m/%Y  %H:%M:%S")  %></small>
        <% end %>
          <div class="but">
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-secondary" %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    </tbody>
  </table>
  <div class="baton">
    <%= link_to 'New Task', new_task_path, class: "btn btn-secondary"  %>
  </div>

</div>
