<div class="content">
  <h1>New Task</h1>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@task) do |f| %>

    <div class="field">
      <%= f.label :title %><br>
  <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
  <%= f.text_field :description %>
    </div>

    <div class="form-group">
  <%= f.label "Ends At:" %>
  <%= f.datetime_select :deadline, class: "form-control"%>
    </div>

    <div class="dropdown">
  <%= f.label "Subject:" %>
  <%= f.select :subject_id, Subject.all.collect { |p| [ p.title, p.id ] }, include_blank: true %>
    </div>
    <div class="actions">
  <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Back', tasks_path %>

</div>