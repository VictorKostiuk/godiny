<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @subjects.each do |sub| %>
    <tr>
      <td><%= sub.title %></td>
      <td><%= link_to 'Show', sub %></td>
      <td><%= link_to 'Edit', edit_subject_path(sub) %></td>
      <td><%= link_to 'Destroy', sub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_subject_path %>
